generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ----------------------
// USER
// ----------------------
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  image     String?
  phone_number      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  addresses Address[]
  orders    Order[]
  draftOrders    DraftOrder[]
  wishlist Product[]
}

// ----------------------
// ADDRESS
// ----------------------
model Address {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  fullName  String
  phone     String
  line1     String
  line2     String?
  city      String
  state     String?
  postal    String
  country   String
  isDefault Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  orders    Order[]
  draftOrders DraftOrder[]
}

// ----------------------
// PRODUCT & SKU
// ----------------------
model Product {
  id          String       @id @default(cuid())
  name        String
  description String?
  images       String[]    @default([])
  category    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  skus        SKU[]
  usersThatWish User[]
}

model SKU {
  id          String     @id @default(cuid())
  product     Product    @relation(fields: [productId], references: [id])
  productId   String

  skuCode     String     @unique
  price       Int        // store cents
  stock       Int        @default(0)
  attributes  Json       // e.g. { size: "L", color: "Black" }
                        // Flexible for any variation type

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  orderItems  OrderItem[]
  draftOrderItems DraftOrderItem[]
}

// ----------------------
// ORDER
// ----------------------
model Order {
  id         String      @id @default(cuid())
  user       User        @relation(fields: [userId], references: [id])
  userId     String

  items      OrderItem[]
  total      Int         // store cents
  status     OrderStatus @default(PENDING)

  // shipping (using user default address)
  shippingAddress   Address @relation(fields: [shippingAddressId], references: [id])
  shippingAddressId String

  // stripe payment
  paymentIntentId   String?
  stripeSessionId   String?

  createdAt  DateTime    @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String

  sku       SKU     @relation(fields: [skuId], references: [id])
  skuId     String

  quantity  Int
  price     Int     // price at the moment of purchase (for history)
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELED
}

model DraftOrder {
  id                String       @id @default(cuid())
  user              User         @relation(fields: [userId], references: [id])
  userId            String

  items             DraftOrderItem[] 
  total             Int          
  status            DraftStatus  @default(PENDING_PAYMENT) 

  shippingAddress   Address      @relation(fields: [shippingAddressId], references: [id])
  shippingAddressId String
  
  paymentIntentId   String?
  stripeSessionId   String?

  createdAt         DateTime     @default(now())
  expiresAt         DateTime?     
}

model DraftOrderItem {
  id             String  @id @default(cuid())
  draftOrder     DraftOrder @relation(fields: [draftOrderId], references: [id])
  draftOrderId   String

  sku            SKU     @relation(fields: [skuId], references: [id])
  skuId          String

  quantity       Int
  price          Int     // price at the moment of purchase (for history)
}

enum DraftStatus {
  PENDING_PAYMENT 
  PAYMENT_FAILED  
  COMPLETED       
  EXPIRED         
}