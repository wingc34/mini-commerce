generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String?
  image        String?
  phone_number String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  addresses    Address[]
  draftOrders  DraftOrder[]
  orders       Order[]
  wishlist     Product[]    @relation("ProductToUser")
}

model Address {
  id          String       @id @default(cuid())
  userId      String
  fullName    String
  phone       String
  line1       String
  line2       String?
  city        String
  state       String?
  postal      String
  country     String
  isDefault   Boolean
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?
  user        User         @relation(fields: [userId], references: [id])
  draftOrders DraftOrder[]
  orders      Order[]
}

model Product {
  id            String   @id @default(cuid())
  name          String
  description   String?
  images        String[] @default([])
  category      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  skus          SKU[]
  usersThatWish User[]   @relation("ProductToUser")
}

model SKU {
  id              String           @id @default(cuid())
  productId       String
  skuCode         String           @unique
  price           Int
  stock           Int              @default(0)
  attributes      Json
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  draftOrderItems DraftOrderItem[]
  orderItems      OrderItem[]
  product         Product          @relation(fields: [productId], references: [id])
}

model Order {
  id                String      @id @default(cuid())
  userId            String
  total             Int
  status            OrderStatus @default(PENDING)
  shippingAddressId String
  paymentIntentId   String?
  stripeSessionId   String?
  createdAt         DateTime    @default(now())
  draftOrderId      String      @unique
  draftOrder        DraftOrder  @relation(fields: [draftOrderId], references: [id])
  shippingAddress   Address     @relation(fields: [shippingAddressId], references: [id])
  user              User        @relation(fields: [userId], references: [id])
  items             OrderItem[]
}

model OrderItem {
  id       String @id @default(cuid())
  orderId  String
  skuId    String
  quantity Int
  price    Int
  order    Order  @relation(fields: [orderId], references: [id])
  sku      SKU    @relation(fields: [skuId], references: [id])
}

model DraftOrder {
  id                String           @id @default(cuid())
  userId            String
  total             Int
  status            DraftStatus      @default(PENDING_PAYMENT)
  shippingAddressId String
  paymentIntentId   String?
  stripeSessionId   String?
  createdAt         DateTime         @default(now())
  expiresAt         DateTime?
  shippingAddress   Address          @relation(fields: [shippingAddressId], references: [id])
  user              User             @relation(fields: [userId], references: [id])
  items             DraftOrderItem[]
  order             Order?
}

model DraftOrderItem {
  id           String     @id @default(cuid())
  draftOrderId String
  skuId        String
  quantity     Int
  price        Int
  draftOrder   DraftOrder @relation(fields: [draftOrderId], references: [id])
  sku          SKU        @relation(fields: [skuId], references: [id])
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELED
}

enum DraftStatus {
  PENDING_PAYMENT
  PAYMENT_FAILED
  COMPLETED
  EXPIRED
}
